<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="::APP_VERSION_CODE::"
    android:versionName="::APP_VERSION_NAME::"
    android:installLocation="::androidInstallLocation::">

    <!-- SDK -->
    <uses-sdk
        android:minSdkVersion="::androidMinSdkVersion::"
        android:targetSdkVersion="::androidTargetSdkVersion::" />

    <!-- Permissions -->
    ::if (androidPermissions != null)::
    ::foreach (androidPermissions)::
    <uses-permission android:name="__value__" />
    ::end::
    ::end::

    <application
        android:label="::APP_TITLE::"
        android:icon="@drawable/icon"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:debuggable="false"
        android:isGame="true"
        android:appCategory="game">

        <activity
            android:name="MainActivity"
            android:label="::APP_TITLE::"
            android:launchMode="singleTask"
            android:screenOrientation="::androidScreenOrientation::"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.GAME" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
